name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Raw data for cleaning
        type: string

      output_artifact:
        description: cleaned_data.csv
        type: string

      output_type:
        description: cleaned_data
        type: string

      output_description:
        description: Cleaned raw data
        type: string

      min_price:
        description: Minimum value for price column
        type: float

      max_price:
        description: Maximum value for price column
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_ndescription {output_ndescription}  --min_price {min_price}  --max_price {max_price} 
